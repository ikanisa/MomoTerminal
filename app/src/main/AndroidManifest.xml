<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- =================================================================== -->
    <!-- NETWORK PERMISSIONS                                                  -->
    <!-- Required for: Network connectivity, API calls, HTTP requests        -->
    <!-- =================================================================== -->
    
    <!-- Full network access - Required to make HTTP requests to public APIs -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- View network connections - Required to monitor network state (Wi-Fi/Mobile/Offline) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- =================================================================== -->
    <!-- SMS PERMISSIONS                                                      -->
    <!-- Required for: SMS relay functionality                                -->
    <!-- =================================================================== -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <!-- =================================================================== -->
    <!-- NFC PERMISSIONS AND FEATURES                                         -->
    <!-- Required for: NFC payment terminal, tag reading                      -->
    <!-- =================================================================== -->
    
    <!-- Control Near Field Communication - Required to read NFC tags and enable NFC HCE -->
    <uses-permission android:name="android.permission.NFC" />
    
    <!-- NFC HCE Feature - Required for Host Card Emulation (payment terminal) -->
    <uses-feature
        android:name="android.hardware.nfc.hce"
        android:required="true" />
    
    <!-- NFC Feature - Marked as optional so app can run on devices without NFC -->
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <!-- =================================================================== -->
    <!-- VIBRATION PERMISSION                                                 -->
    <!-- Required for: Haptic feedback on transactions, test vibration       -->
    <!-- =================================================================== -->
    
    <!-- Control vibration - Required to vibrate the device for haptic feedback -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- =================================================================== -->
    <!-- BIOMETRIC PERMISSIONS                                                -->
    <!-- Required for: Fingerprint/Face authentication for secure login      -->
    <!-- =================================================================== -->
    
    <!-- Use biometric hardware - Required for AndroidX BiometricPrompt on API 28+ -->
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    
    <!-- Use fingerprint hardware - Legacy permission for API 23-27 -->
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <!-- =================================================================== -->
    <!-- CAMERA PERMISSION AND FEATURE                                        -->
    <!-- Required for: Barcode scanning                                       -->
    <!-- Required for: Barcode scanning                                       -->
    <!-- =================================================================== -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- =================================================================== -->
    <!-- WAKE LOCK PERMISSION                                                 -->
    <!-- Required for: Preventing phone from sleeping during long operations -->
    <!-- =================================================================== -->
    
    <!-- Prevent phone from sleeping - Required for WakeLock to keep CPU running -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- =================================================================== -->
    <!-- BOOT COMPLETED PERMISSION                                            -->
    <!-- Required for: Running app at device startup                          -->
    <!-- =================================================================== -->
    
    <!-- Run at startup - Required to receive BOOT_COMPLETED broadcast -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- =================================================================== -->
    <!-- FOREGROUND SERVICE PERMISSIONS                                       -->
    <!-- Required for: Running persistent background services                 -->
    <!-- =================================================================== -->
    
    <!-- Run foreground service - Required for Android 9+ to show persistent notification -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Foreground service type for general purpose data sync operations -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- =================================================================== -->
    <!-- POST NOTIFICATIONS PERMISSION                                        -->
    <!-- Required for: Showing notifications on Android 13+                   -->
    <!-- =================================================================== -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- =================================================================== -->
    <!-- ADVERTISING ID PERMISSION                                            -->
    <!-- Required for: Fetching Google Advertising ID for analytics           -->
    <!-- IMPORTANT: Must comply with user consent and privacy laws (GDPR, etc)-->
    <!-- =================================================================== -->
    
    <!-- Google Advertising ID permission - Merged from Play Services -->
    <uses-permission
        android:name="com.google.android.gms.permission.AD_ID"
        tools:node="merge" />

    <application
        android:name=".MomoTerminalApp"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MomoTerminal"
        tools:targetApi="34">

        <!-- Splash Activity (New Launcher) -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MomoTerminal.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Compose Main Activity with deep link support -->
        <activity
            android:name=".presentation.ComposeMainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/Theme.MomoTerminal">
            
            <!-- App Links (verified deep links) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="momoterminal.com"
                    android:pathPrefix="/app" />
                <data
                    android:scheme="https"
                    android:host="www.momoterminal.com"
                    android:pathPrefix="/app" />
            </intent-filter>

            <!-- Custom scheme deep links (momoterminal://) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="momoterminal" />
            </intent-filter>
            
            <!-- Transaction notification deep links -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="momoterminal"
                    android:host="transaction"
                    android:pathPattern="/.*" />
            </intent-filter>
        </activity>

        <!-- Webhook List Activity -->
        <activity
            android:name=".ui.webhook.WebhookListActivity"
            android:exported="false"
            android:theme="@style/Theme.MomoTerminal" />

        <!-- Webhook Edit Activity -->
        <activity
            android:name=".ui.webhook.WebhookEditActivity"
            android:exported="false"
            android:theme="@style/Theme.MomoTerminal" />

        <!-- Delivery Logs Activity -->
        <activity
            android:name=".ui.webhook.DeliveryLogsActivity"
            android:exported="false"
            android:theme="@style/Theme.MomoTerminal" />

        <!-- SMS Receiver -->
        <receiver
            android:name=".SmsReceiver"
            android:exported="true"
            android:permission="android.permission.BROADCAST_SMS">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <!-- ================================================================ -->
        <!-- BOOT COMPLETED RECEIVER                                          -->
        <!-- Receives BOOT_COMPLETED broadcast when device finishes booting   -->
        <!-- Used to start background tasks or schedule WorkManager jobs      -->
        <!-- ================================================================ -->
        <receiver
            android:name=".capabilities.BootCompletedReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <!-- Run at startup - listen for device boot completion -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- Also handle quick boot on some devices -->
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <!-- ================================================================ -->
        <!-- FOREGROUND SERVICE                                               -->
        <!-- Persistent service that shows ongoing notification               -->
        <!-- Used for long-running background operations with user awareness  -->
        <!-- ================================================================ -->
        <service
            android:name=".capabilities.CapabilitiesForegroundService"
            android:exported="false"
            android:foregroundServiceType="dataSync">
            <!-- foregroundServiceType is required for Android 10+ -->
            <!-- Using dataSync type as this is for demonstration/sync purposes -->
        </service>

        <!-- NFC HCE Service -->
        <service
            android:name=".NfcHceService"
            android:exported="true"
            android:permission="android.permission.BIND_NFC_SERVICE">
            <intent-filter>
                <action android:name="android.nfc.cardemulation.action.HOST_APDU_SERVICE" />
            </intent-filter>
            <meta-data
                android:name="android.nfc.cardemulation.host_apdu_service"
                android:resource="@xml/apduservice" />
        </service>

        <!-- FileProvider for sharing receipts -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!-- App Startup Initialization Provider -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <meta-data
                android:name="com.momoterminal.startup.TimberInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="com.momoterminal.startup.FirebaseInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="com.momoterminal.startup.PerformanceInitializer"
                android:value="androidx.startup" />
            <!-- Disable automatic WorkManager initialization (we use Hilt) -->
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="androidx.startup"
                tools:node="remove" />
        </provider>

        <!-- ProfileInstaller for Baseline Profiles -->
        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:exported="true"
            android:permission="android.permission.DUMP">
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>

    </application>

</manifest>
