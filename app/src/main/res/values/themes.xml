<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark Theme -->
    <style name="Theme.MomoTerminal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#00C853</item>
        <item name="colorPrimaryVariant">#00E676</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">#00C853</item>
        <item name="colorSecondaryVariant">#00E676</item>
        <item name="colorOnSecondary">@android:color/white</item>
        
        <!-- Background and surface colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@android:color/white</item>
        
        <!-- Status bar and navigation bar -->
        <item name="android:statusBarColor">#121212</item>
        <item name="android:navigationBarColor">#121212</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">#121212</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>
    </style>
</resources>
